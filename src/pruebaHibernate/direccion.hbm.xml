<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="pruebaHibernate.Direccion" table="Direccion" >
    <id name="id" column="id" type="long">
      <generator class="increment"/>
    </id>
    <property name="calle" column="calle" type="string"/>
    <property name="numeroExterior" column="numeroExterior" type="int"/>
    <property name="numeroInterior" column="numeroInterior" type="int"/>
    <property name="codigoPostal" column="codigoPostal" type="int"/>
  </class>
</hibernate-mapping>
